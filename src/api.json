    "/audios": {
      "get": {
        "tags": ["Audios"],
        "summary": "Search all audios",
        "operationId": "getAudios",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "description": "Search query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "tags",
            "in": "query",
            "description": "Include tags",
            "schema": {
              "type": "string",
              "example": "rock, pop"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Audio"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Audios"],
        "summary": "Upload new audio",
        "operationId": "uploadAudio",
        "security": [
          {
            "jwt_auth": []
          }
        ],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "cover": {
                    "type": "string",
                    "format": "binary"
                  },
                  "duration": {
                    "type": "integer"
                  },
                  "genres": {
                    "type": "string",
                    "example": "Rock, Pop"
                  },
                  "audio": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation"
          }
        }
      }
    },
